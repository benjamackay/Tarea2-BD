generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario         Int      @id @default(autoincrement())
  descripcion        String?
  fecha_creacion     DateTime @default(now())
  nombre             String
  direccion_correo   String   @unique
  pass               String
}

model Correos {
  id_correo     Int         @id @default(autoincrement())
  remitente     String
  destinatario  String
  asunto        String
  cuerpo        String
  fecha_envio   DateTime    @default(now())
  leido         Boolean
  es_favorito   Boolean
}

model Usuariosbloqueados {
  usuarioid             Int
  usuariobloqueado     Int
  fechabloqueo          DateTime    @default(now())
  @@id([usuarioid, usuariobloqueado])
  }

model Correosfavoritos {
  usuarioid            Int
  correosfavoritos     String
  fecha_anadido       DateTime @default(now())
  @@id([usuarioid, correosfavoritos])

}